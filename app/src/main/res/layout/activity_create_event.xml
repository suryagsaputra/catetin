<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/turqouise"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/event_zone_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/icon_background" />

    <EditText
        android:id="@+id/event_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/event_zone_spinner"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/icon_background"
        android:hint="Nama Acara"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:minLines="1"
        android:paddingStart="10dp"
        android:textColor="@android:color/white" />

    <Button
        android:layout_centerInParent="true"
        android:layout_below="@+id/event_name_edit_text"
        android:id="@+id/event_create_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/icon_background"
        android:text="Buat Acara"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</RelativeLayout>